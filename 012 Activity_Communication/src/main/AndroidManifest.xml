<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.charlezz.a012activity_communication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".menu1.InputActivity"
            android:label="InputActivity"
            />
        <activity android:name=".menu1.ResultActivity"
            android:label="ResultActivity"
            />
        <activity android:name=".menu2.ReceiverActivity"
            android:label="ReceiverActivity"
            />
        <activity android:name=".menu2.InputActivity2"
            android:label="InputActivity2"
            ></activity>
    </application>

</manifest>